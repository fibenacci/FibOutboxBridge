<?xml version="1.0"?>
<ruleset name="FibOutboxBridge">
    <description>PHP_CodeSniffer rules for FibOutboxBridge plugin PHP code.</description>

    <file>src</file>
    <exclude-pattern>*/Resources/*</exclude-pattern>
    <exclude-pattern>*/var/*</exclude-pattern>

    <arg name="basepath" value="."/>
    <arg name="colors"/>
    <arg value="p"/>

    <rule ref="PSR12"/>
</ruleset>
