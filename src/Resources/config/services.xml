<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true" public="false"/>
        <service id="GuzzleHttp\ClientInterface" class="GuzzleHttp\Client"/>
        <service id="Fib\OutboxBridge\Core\Outbox\Security\OutboxCredentialResolverInterface" alias="Fib\OutboxBridge\Core\Outbox\Security\OutboxCredentialResolver"/>
        <service id="Fib\OutboxBridge\Core\Outbox\Security\OutboxSecretConfigMasker"/>
        <service id="Fib\OutboxBridge\Core\Outbox\Security\OutboxCredentialResolver">
            <argument type="tagged_iterator" tag="fib_outbox.credential_reference_resolver"/>
        </service>
        <service id="Fib\OutboxBridge\Core\Outbox\Security\Resolver\EnvCredentialReferenceResolver">
            <tag name="fib_outbox.credential_reference_resolver"/>
        </service>
        <service id="Fib\OutboxBridge\Core\Outbox\Security\Resolver\FileCredentialReferenceResolver">
            <tag name="fib_outbox.credential_reference_resolver"/>
        </service>

        <service id="Fib\OutboxBridge\Core\Content\OutboxEvent\OutboxEventDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <service id="Fib\OutboxBridge\Core\Content\OutboxTarget\OutboxTargetDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <service id="Fib\OutboxBridge\Core\Content\OutboxDestination\OutboxDestinationDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <service id="Fib\OutboxBridge\Core\Content\OutboxRoute\OutboxRouteDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <service id="Fib\OutboxBridge\Core\Outbox\Publisher\OutboxTargetPublisher"/>
        <service id="Fib\OutboxBridge\Core\Outbox\Destination\OutboxDestinationStrategyRegistry">
            <argument type="tagged_iterator" tag="fib_outbox.destination_strategy"/>
        </service>
        <service id="Fib\OutboxBridge\Core\Outbox\Destination\Strategy\WebhookOutboxDestinationStrategy">
            <tag name="fib_outbox.destination_strategy"/>
        </service>
        <service id="Fib\OutboxBridge\Core\Outbox\Destination\Strategy\MessengerOutboxDestinationStrategy">
            <tag name="fib_outbox.destination_strategy"/>
        </service>
        <service id="Fib\OutboxBridge\Core\Outbox\Destination\Strategy\FlowOutboxDestinationStrategy">
            <tag name="fib_outbox.destination_strategy"/>
        </service>
        <service id="Fib\OutboxBridge\Core\Outbox\Destination\Strategy\SftpOutboxDestinationStrategy">
            <tag name="fib_outbox.destination_strategy"/>
        </service>
        <service id="Fib\OutboxBridge\Core\Outbox\Destination\Strategy\CentrifugoOutboxDestinationStrategy">
            <tag name="fib_outbox.destination_strategy"/>
        </service>
        <service id="Fib\OutboxBridge\Core\Outbox\Destination\Strategy\NullOutboxDestinationStrategy">
            <tag name="fib_outbox.destination_strategy"/>
        </service>
        <service id="Fib\OutboxBridge\Core\Flow\Service\OutboxDestinationSelector"/>
        <service id="Fib\OutboxBridge\Core\Flow\Service\FlowOutboxEnqueueService"/>
        <service id="Fib\OutboxBridge\Core\Flow\Action\EnqueueDestinationFlowAction">
            <tag name="flow.action" priority="650" key="action.fib.outbox.send.to.destination"/>
        </service>

        <service id="Fib\OutboxBridge\Core\Outbox\Repository\OutboxRepository"/>
        <service id="Fib\OutboxBridge\Core\Outbox\Config\OutboxSettings"/>
        <service id="Fib\OutboxBridge\Core\Outbox\Routing\OutboxRouteResolver"/>
        <service id="Fib\OutboxBridge\Core\Outbox\Service\OutboxEventBus"/>
        <service id="Fib\OutboxBridge\Core\Outbox\Service\OutboxDispatcher"/>

        <service id="Fib\OutboxBridge\Command\OutboxDispatchCommand">
            <tag name="console.command"/>
        </service>

        <service id="Fib\OutboxBridge\Command\OutboxResetStuckCommand">
            <tag name="console.command"/>
        </service>

        <service id="Fib\OutboxBridge\Command\OutboxStatsCommand">
            <tag name="console.command"/>
        </service>

        <service id="Fib\OutboxBridge\Command\OutboxEnqueueTestCommand">
            <tag name="console.command"/>
        </service>

        <!-- Legacy auto-bridges disabled: Outbox enqueue should happen via explicit Flow actions. -->

        <service id="Fib\OutboxBridge\Subscriber\OutboxFlowBusinessEventSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>
        <service id="Fib\OutboxBridge\Subscriber\OutboxDestinationSecuritySubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Fib\OutboxBridge\ScheduledTask\DispatchOutboxTask">
            <tag name="shopware.scheduled.task"/>
        </service>

        <service id="Fib\OutboxBridge\ScheduledTask\DispatchOutboxTaskHandler">
            <tag name="messenger.message_handler"/>
            <argument type="service" id="scheduled_task.repository"/>
            <argument type="service" id="logger"/>
        </service>

        <service id="Fib\OutboxBridge\Controller\Api\OutboxActionController" public="true">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
